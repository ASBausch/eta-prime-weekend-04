extends layout

block content
  .container-fluid
    .row
      .col-md-9
        img.img-responsive(src='images/startup-593324_1920.jpg', alt='Responsive image')
      .col-md-3
        .container-fluid
          h3.text-center
            small
              | You aren't looking for a "temp". You aren't looking for "filler".
              | You and your buisness want more.
          h3.text-center Welcome to Rando.
          h4.text-center Drive. Commitment. Skill.
          p.lead.text-center It's what Rando is all about.
          img.img-responsive(src='images/rdo.jpg', alt='Responsive image')
  .row
    .col-md-12
  .container-fluid.tan
    .row
      .col-md-5
        .container-fluid
          p.lead.text-uppercase
            br
            | Work with Rando
          form.application
            .form-group
              label(for='fstName') First Name
              input#fstNameField.form-control(type='text', name='firstName', placeholder='First Name')
            .form-group
              label(for='lstName') Last Name
              input#lastNameField.form-control(type='text', name='lastName', placeholder='Last Name')
            .form-group
              label(for='desiredJob') Desired Job
              input#desiredJob.form-control(type='text', name='desiredJob', placeholder='Desired Job')
            .form-group
              label(for='desiredLoc') Desired Location
              .radio
                label
                  input#optionsRadios1(type='radio', name='remote', value='remote', checked='')
                  |           Remote
              .radio
                label
                  input#optionsRadios2(type='radio', name='specific', value='specific')
                  |           Specific
              label(for='desiredJob') Desired City
              input#desiredLoc.form-control(type='text', name='desiredCity', placeholder='Desired City')
              label(for='desiredJob') Desired State
              input#desiredLoc.form-control(type='text', name='desiredState', placeholder='Desired State')
            .form-group
              p.help-block.darkText Please enter your employment history, up to three positions.
            .form-group
              p.help-block.darkText Position One
            .form-group
              label(for='title') Title
              input#title1.form-control(type='text', name='title1', placeholder='Job Title')
            .form-group
              label(for='employer') Employer
              input#employer1.form-control(type='text', name='employer1', placeholder='Employer')
            .form-group
