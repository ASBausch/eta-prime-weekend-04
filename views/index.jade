            .form-group
              label(for='duties') Duties
              input#duties1.form-control(type='text', name='duties1', placeholder='Duties')
            .form-group
              label(for='skills') Skills
              input#skills1.form-control(type='text', name='skills1', placeholder='Skills')
            .form-group
              p.help-block.darkText Position Two
            .form-group
              label(for='title') Title
